{
  "budget": {
    "bundles": {
      "main": {
        "maxSize": "200kb",
        "description": "Main JavaScript bundle"
      },
      "total": {
        "maxSize": "500kb",
        "description": "Total JavaScript size"
      }
    },
    "assets": {
      "images": {
        "maxSize": "100kb",
        "description": "Individual image file size"
      },
      "fonts": {
        "maxSize": "50kb",
        "description": "Individual font file size"
      }
    },
    "metrics": {
      "LCP": {
        "target": 2500,
        "unit": "ms",
        "description": "Largest Contentful Paint"
      },
      "FID": {
        "target": 100,
        "unit": "ms",
        "description": "First Input Delay"
      },
      "CLS": {
        "target": 0.1,
        "unit": "score",
        "description": "Cumulative Layout Shift"
      },
      "FCP": {
        "target": 1800,
        "unit": "ms",
        "description": "First Contentful Paint"
      },
      "TTFB": {
        "target": 600,
        "unit": "ms",
        "description": "Time to First Byte"
      },
      "INP": {
        "target": 200,
        "unit": "ms",
        "description": "Interaction to Next Paint"
      }
    },
    "lighthouse": {
      "performance": {
        "target": 90,
        "description": "Lighthouse Performance Score"
      },
      "accessibility": {
        "target": 90,
        "description": "Lighthouse Accessibility Score"
      },
      "bestPractices": {
        "target": 90,
        "description": "Lighthouse Best Practices Score"
      },
      "seo": {
        "target": 90,
        "description": "Lighthouse SEO Score"
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "alertThreshold": 1.2,
    "description": "Alert when metrics exceed target by 20%"
  },
  "ci": {
    "enabled": true,
    "failOnBudgetExceeded": false,
    "warnOnBudgetExceeded": true
  }
}
